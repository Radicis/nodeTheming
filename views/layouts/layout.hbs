<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{ title }}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="/css/vendor/normalize.min.css">
    <link rel="stylesheet" href="/css/vendor/lightbox.min.css">
    <link rel="stylesheet" href="/css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">

    <style>
        .vibrant{
            color:{{vibrant}} !important;
        }
        .darkMuted{
            color:{{darkMuted}} !important;
        }
        a[class="darkMuted"]:hover{
            color:{{vibrant}} !important;
        }
        .lightMuted{
            background-color:{{lightMuted}} !important;
        }
    </style>
</head>
<body>

<header>
    {{#if topNav}}
        {{> topNav}}
    {{/if}}
</header>

<div class="container content">
    <div class="row">
        {{#if sidebarLeft}}
            <div class="col-md-3">
                {{>sidebarLeft}}
            </div>
        {{/if}}

        {{#if mainContent}}
            <div class="{{#if sidebarLeft}}col-md-6{{/if}}{{#unless sidebarLeft}}col-md-12{{/unless}}">
                {{>mainContent}}
            </div>
        {{else}}
            <p>No Content</p>
        {{/if}}

        {{#if sidebarRight}}
            <div class="col-md-3">
                {{>sidebarRight}}
            </div>
        {{/if}}
    </div>
</div>

{{#if footer}}
    {{>footer}}
{{/if}}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="/js/vendor/jquery-1.11.2.min.js"><\/script>')</script>
<script src="/js/vendor/lightbox.min.js"></script>
<script src="/js/vendor/bootstrap.min.js"></script>
<script src="/js/main.js"></script>
</body>
</html>
